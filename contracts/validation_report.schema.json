{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://keys.dev/contracts/validation_report.schema.json",
  "title": "Keys Validation Report",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "summary", "messages"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["artifacts", "errors", "warnings"],
      "properties": {
        "artifacts": { "type": "integer", "minimum": 0 },
        "errors": { "type": "integer", "minimum": 0 },
        "warnings": { "type": "integer", "minimum": 0 }
      }
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["severity", "rule_id", "message", "file"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["error", "warning"]
          },
          "rule_id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "message": {
            "type": "string",
            "minLength": 1
          },
          "file": {
            "type": "string",
            "minLength": 1
          },
          "artifact_id": {
            "type": "string"
          },
          "suggested_fix": {
            "type": "string"
          }
        }
      }
    }
  }
}
