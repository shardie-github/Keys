{
  "name": "hardonia-ai-companion-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "NEXT_IGNORE_INCORRECT_LOCKFILE=1 next dev",
    "clean": "rm -rf .next node_modules && npm install",
    "build": "cross-env NODE_ENV=production NEXT_PRIVATE_LOCAL_SKIP_FONTS=1 NEXT_IGNORE_INCORRECT_LOCKFILE=1 next build",
    "start": "next start",
    "lint": "next lint --max-warnings 0",
    "lint:fix": "next lint --fix && prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "node -e \"const fs=require('fs'); fs.mkdirSync('.next/types',{recursive:true}); if(!fs.existsSync('.next/types/__placeholder__.ts')) fs.writeFileSync('.next/types/__placeholder__.ts','export {}\\n');\" && tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "analyze": "ANALYZE=true next build",
    "validate": "npm run lint && npm run type-check && npm run test"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "@sentry/nextjs": "^10.36.0",
    "@supabase/ssr": "0.8.0",
    "@supabase/supabase-js": "2.91.1",
    "@xstate/react": "^5.0.0",
    "axios": "^1.13.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "framer-motion": "^12.29.0",
    "lucide-react": "^0.563.0",
    "marked": "^12.0.2",
    "next": "14.2.35",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.54.0",
    "tailwind-merge": "^2.6.0",
    "xstate": "^5.19.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.35",
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "20.19.30",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.1.0",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.35",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jsdom": "^25.0.1",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.49",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^3.4.17",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
