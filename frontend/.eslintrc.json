{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "/** RATIONALE: Enforce Type-Safety & Logic Integrity **/": "off",
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "react/no-unescaped-entities": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    
    "/** RATIONALE: Prevent Edge Runtime Violations (Supabase/Prisma) **/": "off",
    "no-restricted-globals": "off",

    "/** RATIONALE: Clean UI Patterns **/": "off",
    "react-hooks/exhaustive-deps": "error"
  },
  "overrides": [
    {
      "files": ["src/app/api/**", "src/middleware.ts"],
      "rules": {
        "/** RATIONALE: Extra strictness for Edge-entry points **/": "off",
        "@typescript-eslint/no-floating-promises": "error"
      }
    }
  ]
}
